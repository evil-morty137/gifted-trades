<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - GiftedTrades</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Playwrite+HR+Lijeva:wght@100..400&family=Signika+Negative:wght@300..700&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700&display=swap"
        rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        h1,
        p,
        a,
        label {
            font-family: "Signika Negative", sans-serif;
            font-optical-sizing: auto;
            font-weight: 200;
            font-style: normal;
            font-size: 12px;
            color: gray;
        }

        .message {
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .message.show {
            opacity: 1;
        }
    </style>
</head>

<body class="bg-black">

    <!-- Main Content -->
    <div class="container mx-auto mt-24 p-8">
        <h1 class="text-4xl font-bold text-center mb-4">Login</h1>
        <% if (message==='signup' ) { %>
            <!-- Message Pop-up -->
            <div id="message"
                class="message bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-6 max-w-md mx-auto"
                role="alert">
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline">You have successfully signed up.<br /> Enter your credentials below</span>
            </div>
            <% } else if (message==='invalid' ) { %>
                <!-- Message Pop-up -->
                <div id="message"
                    class="message bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6 max-w-md mx-auto"
                    role="alert">
                    <strong class="font-bold">Failed!</strong>
                    <span class="block sm:inline">Invalid login credentials</span>
                </div>
                <% } %>
                    <!-- Login Form -->
                    <form class="bg-gray-900 shadow-lg rounded-lg p-8 max-w-md mx-auto" action="/login" method="post">
                        <div class="mb-4 mt-6">
                            <label for="email" class="block font-bold mb-2">Email</label>
                            <input type="email" id="email" name="email"
                                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-green-500">
                        </div>
                        <div class="mb-4">
                            <label for="password" class="block font-bold mb-2">Password</label>
                            <input type="password" id="password" name="password"
                                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-green-500">
                        </div>


                        <!-- Login Button -->
                        <div class="mt-8">
                            <button type="submit" style="background-color: #57B6AD;"
                                class="w-full text-white px-6 py-2 rounded-md transition-colors duration-300">
                                Sign in
                            </button>
                        </div>

                        <div class="flex justify-between items-center mb-4 mt-8">
                            <a href="/password" style="color: #57B6AD;" class="mx-auto">Forgot Password?</a>
                        </div>
                        <div class="flex justify-between text-black items-center mb-4">
                            <a href="/signup" class="mx-auto">Don't have an account? <span style="color: #57B6AD;">Sign
                                    Up</span></a>
                        </div>
                    </form>
    </div>

    <script>
        // Function to show the message
        function showMessage() {
            var message = document.getElementById('message');
            message.classList.add('show');

            // Hide the message after 3 seconds
            setTimeout(function () {
                message.classList.remove('show');
            }, 5000);
        }

        // Show the message when the page loads
        window.onload = function () {
            showMessage();
        };
    </script>
</body>

</html>