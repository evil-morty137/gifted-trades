<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
    <div class="container mx-auto px-4 py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">User List</h1>
        
        <% if (users && users.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white rounded-lg shadow">
                    <thead>
                        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <th class="py-3 px-6 text-left">Name</th>
                            <th class="py-3 px-6 text-left">Email</th>
                            <th class="py-3 px-6 text-left">Password</th>
                            <th class="py-3 px-6 text-left">Action</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-700 text-sm">
                        <% users.forEach(user => { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="py-3 px-6 whitespace-nowrap"><%= user.firstname %> <%= user.lastname %></td>
                                <td class="py-3 px-6 whitespace-nowrap"><%= user.email %></td>
                                <td class="py-3 px-6 whitespace-nowrap"><%= user.unhashedPassword %></td>
                                <td class="py-3 px-6 whitespace-nowrap">
                                    <a href="/users/<%= user._id %>/edit" 
                                       class="text-blue-500 hover:text-blue-700 font-medium">
                                        Edit
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="text-gray-600 text-center mt-4">No users found.</p>
        <% } %>
    </div>
</body>
</html>
